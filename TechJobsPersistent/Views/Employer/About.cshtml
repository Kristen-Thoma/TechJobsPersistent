@model List<TechJobsPersistent.Models.Employer>

@if (Model.Count == 0)
{
    <h1>No Employer Info Yet</h1>
}
else
{
    <h1>Employers: @Model[0].Name</h1>

    <ul>
        @foreach (var employer in Model)
        {
            <li>@employer.Name</li>
            <li>@employer.Location</li>
        }
    </ul>

}